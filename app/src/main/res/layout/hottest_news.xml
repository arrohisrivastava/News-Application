<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="240dp"
    android:layout_marginEnd="15dp"
    app:cardBackgroundColor="#4E404C"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_margin="5dp"
        >

        <ImageView
            android:id="@+id/HotNewsImgIV"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/HeadingLL"
            android:layout_below="@id/HotNewsImgIV"
            >
            <TextView
                android:id="@+id/HotNewsHeadTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abhaya_libre_bold"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:paddingBottom="5dp"
                android:text="News Heading"
                android:textColor="#f5ebe0"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>